<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lunch_frame">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:background="@drawable/shadow_right"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:layout_weight="4"
            android:paddingEnd="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView7"
                android:src="@drawable/tray"
                android:adjustViewBounds="true"
                android:contentDescription="@string/event_title_plural"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/lunch_title_plural"
                android:id="@+id/textView9"
                android:layout_alignStart="@+id/imageView7"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_marginStart="10dp"
                android:textColor="#ffffffff"
                android:textSize="@dimen/section_header_text_size" />
        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_material_light"
            android:layout_weight="3">

            <ExpandableListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lunch_exlistview"
                android:groupIndicator="@null"
                android:background="#ffffffff" />
            <TextView android:id="@id/android:empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/please_refresh"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="gravity"
                android:textSize="@dimen/row_normal_text_size"
                android:padding="30dp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>