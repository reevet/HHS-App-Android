<?xml version="1.0" encoding="utf-8"?>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:minHeight="30dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_time"
            android:textSize="@dimen/row_normal_text_size"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_title"
            android:textSize="@dimen/row_smaller_text_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="false"
            android:textAlignment="gravity"
            android:textColor="@color/counter_text_bg"
            android:gravity="start"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@+id/row_time"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/row_disc_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_disc_icon"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:src="@drawable/disclosure"
            android:layout_centerVertical="true"
            android:contentDescription="@string/disclosure_icon" />

    </RelativeLayout>

</TableRow>