<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/news_frame">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_black"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:id="@+id/header">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:adjustViewBounds="true"
                android:src="@drawable/newspapers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="News"
                android:id="@+id/textView6"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignBottom="@+id/imageView4"
                android:textColor="#ffffffff"
                android:textSize="24dp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
        android:id="@+id/cardlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:background="@color/background_material_light" />

    <TextView android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please connect to a network and choose Refresh from the menu."
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:textSize="@dimen/row_normal_text_size"
        android:padding="30dp" />


</LinearLayout>
    </FrameLayout>