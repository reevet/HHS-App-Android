<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dailyann_frame">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dailyann_layout">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_black"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:background="@color/hhs_red"
                android:src="@drawable/microphone"
                android:cropToPadding="true"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Daily Announcements"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignLeft="@+id/imageView3"
                android:textColor="#ffffffff"
                android:textSize="24dp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dailyann_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please connect to a network and choose Refresh from the menu."
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:textSize="@dimen/row_normal_text_size"
        android:padding="30dp" />
</LinearLayout>
    </FrameLayout>