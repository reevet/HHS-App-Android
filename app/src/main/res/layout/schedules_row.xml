<?xml version="1.0" encoding="utf-8"?>

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="@dimen/schedule_icon"
            android:layout_height="@dimen/schedule_icon"
            android:id="@+id/row_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/row_date"
            android:textSize="@dimen/row_normal_text_size"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/row_icon"
            android:textColor="@android:color/black"
            android:gravity="left"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/row_title"
            android:textSize="@dimen/row_normal_text_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textAlignment="gravity"
            android:textColor="@color/counter_text_bg"
            android:layout_toRightOf="@+id/row_date"
            android:layout_alignParentLeft="false"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/row_disc_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_disc_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/disclosure"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

</TableRow>