<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/hhs_red</item>
        <item name="background">@color/hhs_red</item>
        <item name="android:titleTextStyle">
            @style/MyActionBarTitleText
        </item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Text styles -->
    <style name="CardTitle">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="CardCaption">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="HeaderElevated">
        <item name="android:shadowColor">#88222222</item>
        <item name="android:shadowDy">5</item>
    </style>


</resources>
