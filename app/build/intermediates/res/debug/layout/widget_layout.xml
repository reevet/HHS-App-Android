<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/widget_background"
    android:id="@+id/widget_all">

    <ImageView
        android:layout_width="@dimen/schedule_icon"
        android:layout_height="@dimen/schedule_icon"
        android:id="@+id/widget_sched_icon"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_hhs_hollow"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/widget_sched_icon"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="HHS Schedule"
            android:id="@+id/widget_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Waiting for connection..."
            android:id="@+id/widget_date"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/widget_title"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/reevet/Documents/GitHub/HollistonHighApp/app/src/main/res/layout/widget_layout.xml -->