<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/events_frame">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_down"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/dance"
                android:adjustViewBounds="true"
                android:contentDescription="@string/event_title_plural" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/event_title_plural"
                android:id="@+id/textView8"
                android:layout_marginStart="10dp"
                android:textColor="#ffffffff"
                android:textSize="@dimen/section_header_text_size"
                android:layout_alignStart="@+id/imageView6"
                android:layout_alignBottom="@+id/imageView6" />
        </RelativeLayout>

        <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/events_exlistview"
        android:groupIndicator="@null" />
    <TextView android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/please_refresh"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity"
        android:textSize="@dimen/row_normal_text_size"
        android:padding="30dp" />

</LinearLayout>
