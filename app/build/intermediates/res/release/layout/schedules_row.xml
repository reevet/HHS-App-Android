<?xml version="1.0" encoding="utf-8"?>

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/sched_row">

        <ImageView
            android:layout_width="@dimen/schedule_icon"
            android:layout_height="@dimen/schedule_icon"
            android:id="@+id/row_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/schedule_title_single" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/row_icon"
            android:layout_toStartOf="@+id/row_disc_icon"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row_date_day"
                android:textSize="20sp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"
                android:gravity="start"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row_date_full"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/counter_text_bg"
                android:gravity="end"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_disc_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/disclosure"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/disclosure_icon" />

    </RelativeLayout>

</TableRow><!-- From: file:/C:/Users/Tom/Documents/GitHub/HollistonHighApp/app/src/main/res/layout/schedules_row.xml -->